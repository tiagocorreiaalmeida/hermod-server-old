{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "ES2016",
      "ESNext.AsyncIterable"
    ],
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}